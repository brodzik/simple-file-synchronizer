<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="191.0" prefWidth="492.0" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="com.brodzik.adrian.simplefilesynchronizer.ui.entry.EntryView">
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <VBox.margin>
                <Insets bottom="10.0" top="10.0"/>
            </VBox.margin>
            <Label prefHeight="30.0" prefWidth="60.0" text="Name:" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
            </Label>
            <TextField fx:id="textFieldName" prefHeight="30.0" prefWidth="318.0" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </TextField>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
            <Label prefHeight="566.0" prefWidth="60.0" text="Folder A:">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
            </Label>
            <TextField fx:id="textFieldFolderA" disable="true" prefHeight="276.0" prefWidth="200.0"
                       HBox.hgrow="ALWAYS"/>
            <Button mnemonicParsing="false" onAction="#selectFolderA" prefHeight="30.0" prefWidth="40.0" text="...">
                <HBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </HBox.margin>
            </Button>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
            <Label prefHeight="507.0" prefWidth="60.0" text="Folder B:">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
            </Label>
            <TextField fx:id="textFieldFolderB" disable="true" prefHeight="388.0" prefWidth="200.0"
                       HBox.hgrow="ALWAYS"/>
            <Button mnemonicParsing="false" onAction="#selectFolderB" prefHeight="30.0" prefWidth="40.0" text="...">
                <HBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </HBox.margin>
            </Button>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
            <Label prefHeight="255.0" prefWidth="60.0" text="Direction:">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
            </Label>
            <ComboBox fx:id="comboBoxDirection" prefHeight="26.0" prefWidth="200.0"/>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
            <Button mnemonicParsing="false" onAction="#apply" prefHeight="121.0" prefWidth="60.0" text="Apply">
                <HBox.margin>
                    <Insets left="350.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="buttonCancel" mnemonicParsing="false" onAction="#close" prefHeight="247.0" prefWidth="60.0"
                    text="Cancel">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </children>
</VBox>
