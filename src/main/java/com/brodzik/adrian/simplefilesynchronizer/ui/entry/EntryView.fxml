<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="239.0" prefWidth="492.0" xmlns="http://javafx.com/javafx/10.0.1"
      fx:controller="com.brodzik.adrian.simplefilesynchronizer.ui.entry.EntryView">
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <VBox.margin>
                <Insets bottom="10.0" top="10.0"/>
            </VBox.margin>
            <Label prefHeight="30.0" prefWidth="60.0" text="Name:" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
            </Label>
            <TextField fx:id="textFieldName" prefHeight="30.0" prefWidth="318.0" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </TextField>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
            <Label prefHeight="566.0" prefWidth="60.0" text="Folder A:">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
            </Label>
            <TextField fx:id="textFieldFolderA" disable="true" prefHeight="276.0" prefWidth="200.0"
                       HBox.hgrow="ALWAYS"/>
            <Button mnemonicParsing="false" onAction="#selectFolderA" prefHeight="30.0" prefWidth="40.0" text="...">
                <HBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </HBox.margin>
            </Button>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
            <Label prefHeight="507.0" prefWidth="60.0" text="Folder B:">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
            </Label>
            <TextField fx:id="textFieldFolderB" disable="true" prefHeight="388.0" prefWidth="200.0"
                       HBox.hgrow="ALWAYS"/>
            <Button mnemonicParsing="false" onAction="#selectFolderB" prefHeight="30.0" prefWidth="40.0" text="...">
                <HBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </HBox.margin>
            </Button>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
            <Label prefHeight="153.0" prefWidth="60.0" text="Direction:">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
            </Label>
            <ComboBox fx:id="comboBoxDirection" prefHeight="125.0" prefWidth="200.0"/>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label prefHeight="130.0" prefWidth="60.0" text="Enabled:">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </Label>
                <RadioButton mnemonicParsing="false" prefHeight="445.0" prefWidth="39.0" selected="true" text="Yes"
                             fx:id="radioButtonEnable">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                    <toggleGroup>
                        <ToggleGroup fx:id="toggleEnabled"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton mnemonicParsing="false" prefHeight="416.0" prefWidth="38.0" text="No"
                             toggleGroup="$toggleEnabled" fx:id="radioButtonDisable"/>
            </children>
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
            <Button mnemonicParsing="false" onAction="#apply" prefHeight="121.0" prefWidth="60.0" text="Apply">
                <HBox.margin>
                    <Insets left="350.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="buttonCancel" mnemonicParsing="false" onAction="#close" prefHeight="247.0" prefWidth="60.0"
                    text="Cancel">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </children>
</VBox>
