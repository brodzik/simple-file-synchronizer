<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/10.0.1"
      fx:controller="com.brodzik.adrian.simplefilesynchronizer.ui.dashboard.DashboardView">
    <SplitPane dividerPositions="0.75" focusTraversable="true" prefHeight="338.0" prefWidth="640.0"
               VBox.vgrow="ALWAYS">
        <TableView fx:id="entryTable" prefWidth="515.0">
            <columns>
                <TableColumn prefWidth="75.0" text="Id">
                    <cellValueFactory>
                        <PropertyValueFactory property="id"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="name"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Folder A">
                    <cellValueFactory>
                        <PropertyValueFactory property="folderA"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Folder B">
                    <cellValueFactory>
                        <PropertyValueFactory property="folderB"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Direction" fx:id="tableColumnDirection"
                             style="-fx-alignment: CENTER;"/>
                <TableColumn prefWidth="75.0" text="Frequency">
                    <cellValueFactory>
                        <PropertyValueFactory property="frequency"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Enabled">
                    <cellValueFactory>
                        <PropertyValueFactory property="enabled"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <VBox prefWidth="100.0">
            <Button mnemonicParsing="false" prefWidth="Infinity" text="New" onAction="#newEntry">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefWidth="Infinity" text="Edit" onAction="#editEntry"
                    fx:id="buttonEditEntry">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0"/>
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefWidth="Infinity" text="Remove" onAction="#removeEntry"
                    fx:id="buttonRemoveEntry">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0"/>
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefWidth="Infinity" text="Sync" onAction="#sync" fx:id="buttonSync">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="40.0"/>
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefWidth="Infinity" text="Sync All" onAction="#syncAll"
                    fx:id="buttonSyncAll">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0"/>
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefWidth="Infinity" text="Settings" onAction="#editSettings">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="40.0"/>
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefWidth="Infinity" text="Minimize to tray" onAction="#minimizeToTray">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0"/>
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefWidth="Infinity" text="Exit" onAction="#exit">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </SplitPane>
    <AnchorPane>
        <ProgressBar prefHeight="20.0" prefWidth="640.0" progress="0.0" AnchorPane.bottomAnchor="0.0"
                     AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
    </AnchorPane>
</VBox>
