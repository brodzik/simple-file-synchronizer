<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/10.0.1"
      fx:controller="com.brodzik.adrian.simplefilesynchronizer.ui.dashboard.DashboardController">
    <MenuBar VBox.vgrow="NEVER">
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#createNew" text="New"/>
            <MenuItem mnemonicParsing="false" text="Settings" onAction="#showSettings"/>
            <MenuItem mnemonicParsing="false" text="Exit" onAction="#exit"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" text="About" onAction="#showAbout"/>
        </Menu>
    </MenuBar>
    <SplitPane dividerPositions="0.7115987460815048" focusTraversable="true" prefHeight="338.0" prefWidth="640.0"
               VBox.vgrow="ALWAYS">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
            <TableView items="${controller.model.entries}" prefHeight="354.0"
                       prefWidth="515.0"
                       AnchorPane.bottomAnchor="0.0"
                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <columns>
                    <TableColumn prefWidth="75.0" text="Id">
                        <cellValueFactory>
                            <PropertyValueFactory property="Id"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="75.0" text="Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="Name"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="75.0" text="Source">
                        <cellValueFactory>
                            <PropertyValueFactory property="Source"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="75.0" text="Destination">
                        <cellValueFactory>
                            <PropertyValueFactory property="Destination"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="75.0" text="Frequency">
                        <cellValueFactory>
                            <PropertyValueFactory property="Frequency"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="75.0" text="Enabled">
                        <cellValueFactory>
                            <PropertyValueFactory property="Enabled"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </AnchorPane>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0"/>
    </SplitPane>
    <AnchorPane id="AnchorPane">
        <ProgressBar prefHeight="20.0" prefWidth="640.0" progress="0.0" AnchorPane.bottomAnchor="0.0"
                     AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
    </AnchorPane>
</VBox>
